@model BullyWeb.Models.Category

<div class="container mt-4">
     @if (TempData["AlertMessage"] != null)
    {
        <div class="alert alert-warning">
            @TempData["AlertMessage"]
        </div>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }  
    <form method="post">
        <input asp-for="Id" hidden />
        <div class="border p-3 mt-4">
            <div class="form-floating py-2 col-12">
                <input asp-for="Name" disabled class="form-control border-0 " />
                <label asp-for="Name" class="ms-2"></label>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="DisplayOrder" disabled class="form-control border-0 " />
                <label asp-for="DisplayOrder" class="ms-2"></label>
            </div>

            <div class="row mt-3">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-danger form-control">Delete</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Category" asp-action="Index" class="btn btn-secondary border form-control">
                        Back to List
                    </a>
                </div>
            </div>
        </div>
    </form>
</div>
